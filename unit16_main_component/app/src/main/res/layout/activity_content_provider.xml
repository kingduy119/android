<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentProviderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">
        <Button
            android:id="@+id/btnMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Main" />
        <Button
            android:id="@+id/btnService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Service" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btnStartContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnStartContent" />

        <Button
            android:id="@+id/btnEndContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnEndContent" />

        <Button
            android:id="@+id/btnBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast to MAIN" />

        <Button
            android:id="@+id/btnSendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Data to Service" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>